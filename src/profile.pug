extends pug/_layout
include modules/popup/popup
include modules/menu/menu
include modules/profile/profile

block body
  +profile()
    .table__container#profile-table
      .table__title
        .table__number №
        .table__address Адрес квартиры
        .table__date Статус заказа
        .table__date Оплата
        .table__certificate Документы

      .table__rows

      .table__template
        .table__row
          .table__cell.table__number
            .table__label №
            .table__value {{index}}
          .table__cell.table__address
            .table__label Адрес квартиры
            .table__value {{address}}
          .table__cell.table__date
            .table__label Статус заказа
            .table__value {{status}}
          .table__cell.table__date
            .table__label Оплата
            .table__value {{paid}}
          .table__cell.table__certificate
            .table__label Документы
            .table__value {{documents}} #[a(href='/order_step3.html?order={{id}}&done=true') Загрузить&nbsp;документы]
    include modules/footer/footer
