@import "stylus/_vars.styl";
@import "stylus/_mixins.styl";
@import "stylus/_grid.styl";

html
  margin: 0
  padding: 0
  font-family: 'Ubuntu', sans-serif
  font-size: $font-size
  line-height: $line-height

body
  margin: 0
  padding: 0
  background: #F0F5F8
//vertical-gradient()

html, body
  height: 100%

*, *:before, *:after
  box-sizing: border-box

img
  max-width: 100%
  height: auto

a
  color: inherit
  text-decoration: none
  //&:hover
button
  color: inherit


