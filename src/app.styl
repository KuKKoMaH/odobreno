@import "stylus/_grid.styl";

@font-face {
  font-family: 'DIN Pro Cond';
  src: url('fonts/subset-DINPro-CondensedBold.eot');
  src: url('fonts/subset-DINPro-CondensedBold.eot?#iefix') format('embedded-opentype'),
          url('fonts/subset-DINPro-CondensedBold.woff2') format('woff2'),
          url('fonts/subset-DINPro-CondensedBold.woff') format('woff'),
          url('fonts/subset-DINPro-CondensedBold.ttf') format('truetype'),
          url('fonts/subset-DINPro-CondensedBold.svg#DINPro-CondensedBold') format('svg');
  font-weight: bold;
  font-style: normal;
}


html
  margin: 0
  padding: 0
  font-family: 'Ubuntu', sans-serif
  font-size: $font-size
  line-height: $line-height

body
  margin: 0
  padding: 0
  background: #F0F5F8
//vertical-gradient()

html, body
  height: 100%

*, *:before, *:after
  box-sizing: border-box

img
  max-width: 100%
  height: auto

a
  color: inherit
  text-decoration: none
  //&:hover
button
  color: inherit


