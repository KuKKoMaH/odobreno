.partners
  background: #227dba
  padding: 25px 0 90px
  color: #ffffff

  &__title
    text-align: center
    font-size: 22px
    font-weight: 300
    margin-bottom: 35px

  &__block
    display: flex
    align-items center
    width: 100%

    @media (max-width: $breakpoint-md - 1)
      display: block

  &__slider
    flex: 1
    overflow: hidden

  &__button
    text-align: center
    max-width: 200px
    margin-left: 15px

    @media (max-width: $breakpoint-md - 1)
      max-width: none
      margin-top: 15px
      margin-left: 0