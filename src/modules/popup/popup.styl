.popups
  display: none

.popup
  position: relative
  width: 360px
  background: #ffffff
  border-radius: 3px
  margin: 0 auto
  padding: 34px 40px

  &__text
    color: #2973a8
    font-size: 19px
    margin-bottom: 18px

  &__input
    margin-bottom: 14px

  .mfp-close
    background-image: url(sprite-close.svg)
    position: absolute
    font-size: 0
    margin-right: 16px
    margin-top: 16px