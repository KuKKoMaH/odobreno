$baseClass = '.works';
.works
  background: #3d4360
  padding: 70px 0
  text-align: center

  &__title
    margin: 0
    padding-bottom: 70px
    color: #ffffff
    font-size: 22px
    text-transform: uppercase

  &__item
    &:hover
      {$baseClass}__name,
      {$baseClass}__text
        color: #ffffff

  &__name
    font-size: 16px
    color: #457ec2
    text-transform: uppercase
    margin-bottom: 9px
    anim()

  &__text
    font-size: 17px
    color: #a5b7cc
    anim()

  &__button
    margin-top: 55px
    border: 1px solid #3F547B
    background: transparent
    color: #5c93d3
    height: 64px
    border-radius: 4px
    font-size: 15px
    text-transform: uppercase
    padding: 0 45px
    cursor: pointer
    anim()
    outline: 0

    &:hover
      border: 1px solid #4476B0