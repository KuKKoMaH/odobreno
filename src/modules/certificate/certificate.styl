.certificate
  background: url(./bg.jpg) 50% 50% no-repeat
  background-size: cover
  position: absolute
  left: 0
  top: 0
  width: 100%
  height: 100%
  display: flex
  align-items: center
  color: #ffffff
  padding: 50px

  @media (max-width: $breakpoint-md - 1)
    padding: 50px 20px

  &__image
    display: block
    max-height: 100%
    margin: 0 auto

  &__download
    position: absolute
    right: 50px
    top: 5px

    &:before
      content: ''
      display: inline-block
      vertical-align: middle
      background: url(./download.png) 50% 50% no-repeat
      background-size: contain
      width: 20px
      height: 41px
      margin-right: 8px