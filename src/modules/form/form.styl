.form
  flex: 1
  display: flex
  align-items: center
  justify-content: center
  padding: 20px 0

  &__wrapper
    background: #ffffff
    box-shadow: 0 21px 32px rgba(#233C4C, .05)
    max-width: 815px
    border-radius: 3px

    @media (max-width: $breakpoint-sm - 1)
      width: 100%

  &__header
    border-bottom: 1px solid #D0E2ED
    padding: 35px 84px 0
    cf()

    @media (max-width: $breakpoint-sm - 1)
      padding-left: 12px
      padding-right: 12px

  &__title
    float: left
    color: #505050
    font-size: 13px
    border-bottom: 3px solid transparent
    margin-right: 35px
    padding-bottom: 8px
    text-transform: uppercase

    &--active
      color: #2973a8
      border-bottom: 3px solid #227EBA

  &__body
    padding: 24px 84px 44px

    @media (max-width: $breakpoint-sm - 1)
      padding-left: 12px
      padding-right: 12px

  &__order
    font-size: 12px
    color: #a5b7c4
    margin-bottom: 25px

  &__label
    font-size: 15px
    color: #505050
    margin-bottom: 17px

  &__row
    display: flex
    flex-direction: row
    align-items: flex-end
    margin: 0 -6px 22px

    @media (max-width: $breakpoint-sm - 1)
      display: block

    & > div
      padding: 0 6px
      flex: 1

      @media (max-width: $breakpoint-sm - 1)
        margin-bottom: 12px

  &__apart
    max-width: 110px

    @media (max-width: $breakpoint-sm - 1)
      max-width: none

  &__calc
    font-size: 15px
    color: #505050

  &__price
    font-size: 33px
    font-weight: bold
    display: inline-block
    margin-left: 20px
    line-height: 1

  &__button
    background: #4caf50
    display: block
    width: 100%
    height: 64px
    border-radius: 4px
    border: 2px solid #4caf50
    font-size: 15px
    color: #ffffff
    font-weight: bold
    padding: 0
    margin: 0
    anim(.15s)
    cursor: pointer

    &:hover
      background-color: transparent
      color: #4caf50

    &:disabled
      background: #C5DCC6

  &__offer
    input
      display: none

    input:checked + label:before
      background-image: url(sprite-checkox-checked.svg)

    label
      display: inline-block
      vertical-align: middle
      color: #898989
      font-size: 13px
      line-height: 20px
      &:before
        content: ''
        display: inline-block
        vertical-align: sub
        background-image: url(sprite-checkox.svg)
        margin-right: 15px
