.input
  display: block
  position: relative

  &__input
    display: block
    width: 100%
    background: #F0F5F8
    border: 1px solid transparent
    outline: 0
    font-size: 16px
    line-height: 1.2
    padding: 30px 15px 13px
    border-radius: 4px
    color: #628aa1
    anim()

    &:focus
      background: #c1d8e5
      border: 1px solid #CDD6DC

    &:focus + .input__label,
    &:valid + .input__label
      top: 10px
      font-size: 12px
      color: #628aa1

  &__label
    display: block
    position: absolute
    color: #40647C
    font-size: 15px
    left: 15px
    top: 22px
    pointer-events: none
    anim()

  &--search

    &:after
      content: ''
      display: block
      background-image: url(sprite-search.svg)
      position: absolute
      right: 14px
      top: 50%
      transform: translateY(-50%)
      pointer-events: none

    .input__input
      background: #E0E9EF
      color: #40647C
      &:focus
        border-color: transparent
