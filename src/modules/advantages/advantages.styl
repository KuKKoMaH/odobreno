$baseClass = '.advantages'
{$baseClass}
  padding: 80px 0
  text-align: center

  @media (max-width: $breakpoint-sm - 1)
    padding: 40px 0

  &__title
    font-size: 22px
    color: #227eba
    text-transform: uppercase
    margin-bottom: 75px
    @media (max-width: $breakpoint-sm - 1)
      margin-bottom: 35px

  &__item
    text-align: left
    margin-bottom: 85px
    cf()

    &:nth-child(even)
      {$baseClass}__image
        float: right

      {$baseClass}__content
        margin-left: 0

    @media (max-width: $breakpoint-sm - 1)
      margin-bottom: 40px
      text-align: center

  &__image
    width: 50%
    float: left
    text-align: center

    @media (max-width: $breakpoint-sm - 1)
      width: 100%
      float: none
      padding: 0 10px

  &__content
    width: 50%
    margin-left: 50%
    padding-right: 20px

    @media (max-width: $breakpoint-sm - 1)
      width: 100%
      margin: 0
      padding: 0 10px

  &__name
    font-size: 24px
    line-height: 1.3
    color: #4a4a4a
    margin-bottom: 20px

  &__text
    font-size: 17px
    color: #50758b
