$baseClass = '.advantages'
{$baseClass}
  padding: 80px 0
  text-align: center

  &__title
    font-size: 22px
    color: #227eba
    text-transform: uppercase
    margin-bottom: 75px

  &__item
    text-align: left
    margin-bottom: 85px
    cf()

    &:nth-child(even)
      {$baseClass}__image
        float: right

      {$baseClass}__content
        margin-left: 0


  &__image
    width: 50%
    float: left
    text-align: center

  &__content
    width: 50%
    margin-left: 50%
    padding-right: 20px

  &__name
    font-size: 24px
    line-height: 1.3
    color: #4a4a4a
    margin-bottom: 20px

  &__text
    font-size: 17px
    color: #50758b

  &__button
    margin-top: 55px
    border: 1px solid #B5C9DF
    background: transparent
    color: #5c93d3
    height: 64px
    border-radius: 4px
    font-size: 15px
    text-transform: uppercase
    padding: 0 45px
    cursor: pointer
    anim()
    outline: 0

    &:hover
      border: 1px solid #4476B0