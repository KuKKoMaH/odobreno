.last
  padding: 72px 0 90px
  position: relative
  background: #F0F5F8
  
  &__header
    font-size: 22px
    padding-top: 20px
    color: #227eba
    text-transform: uppercase

  &__aside
    float: right

  &__button
    display: inline-block
    vertical-align: bottom
    border: 1px solid #B5C9DF
    background: transparent
    color: #5c93d3
    height: 54px
    line-height: 54px
    border-radius: 4px
    font-size: 13px
    text-transform: uppercase
    padding: 0 15px
    cursor: pointer
    anim()
    outline: 0

    &:hover
      border: 1px solid #4476B0

  &__counter
    display: inline-block
    vertical-align: bottom
    margin-left: 30px

  &__counter-title
    font-size: 11px
    color: #227eba
    text-transform: uppercase
    margin-bottom: 4px

  &__flip
    display: inline-block
    text-align: center
    color: #ffffff
    line-height: 41px
    font-size: 35px
    background-image: url(sprite-flip.svg)
    font-family: 'DIN Pro Cond'
    font-weight: bold

  &__slider
    margin-top: 50px

  &__card
    background: #fff
    border: 1px solid #D5D9DB
    display: inline-block
    padding: 7px
    height: 261px
    border-radius: 3px
    line-height: 1.4

  &__image
    display: block
    margin-bottom: 13px

  &__date
    font-size: 13px
    color: #969696
    margin-bottom: 2px
    
    &:before
      content: ''
      display: inline-block
      float: right
      background-image: url(sprite-check.svg);

  &__title
    font-size: 17px
    color: #505050
    margin-bottom: 2px

  &__subtitle,
  &__description
    ont-size: 14px
    color: #969696
    margin-bottom: 5px