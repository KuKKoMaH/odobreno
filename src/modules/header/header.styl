.header
  height: 760px
  background: url(header-bg.jpg)
  background-size: cover
  color: #fff
  padding-top: 30px

  @media (max-width: $breakpoint-md - 1)
    height: auto
    padding-bottom: 35px

  @media (max-width: $breakpoint-sm - 1)
    padding-bottom: 0

  &__top
    @media (max-width: $breakpoint-sm - 1)
      text-align: center

  &__content
    margin-top: 60px

    @media (max-width: $breakpoint-sm - 1)
      padding: 0 10px

  &__vtb
    background-image: url(sprite-vtb.svg)
    float: right
    margin-top: 68px

    @media (max-width: $breakpoint-md - 1)
      float: none

    @media (max-width: $breakpoint-sm - 1)
      float: none
      margin: 0
      display: inline-block
      vertical-align: bottom
      transform: scale(.5)
      margin-left: -30px
      margin-right: -30px

  h1
    font-weight: 400
    font-size: 58px
    margin: 0 0 20px

    @media (max-width: $breakpoint-sm - 1)
      font-size: 40px
      line-height: 1.1
      margin-top: 20px

  h2
    font-weight: 300
    font-size: 25px
    margin: 0
    text-indent: -20px
    line-height: 1.55

    @media (max-width: $breakpoint-sm - 1)
      font-size: 20px
      text-indent: 0

  &__form
    //font-size: 0
    margin: 0 -7px
    display: flex

    @media (max-width: $breakpoint-sm - 1)
      flex-direction: column

    &-wrapper
      margin-top: 150px
      padding: 30px 70px
      background: #fff
      box-shadow: 0 15px 16px rgba(#1A3365, .27)
      border-radius: 6px

      @media (max-width: $breakpoint-lg - 1)
        padding: 30px 35px

      @media (max-width: $breakpoint-md - 1)
        margin-top: 50px

      @media (max-width: $breakpoint-sm - 1)
        padding 20px 10px
        border-radius: 0


    &-title
      color: #2973a8
      font-size: 22px
      margin-bottom: 25px

      @media (max-width: $breakpoint-sm - 1)
        text-align: center
        font-size: 14px
        line-height: 1.2
        span
          display: block
          font-weight: bold
          font-size: 23px

    &-input
      //display: inline-block
      //vertical-align: middle
      flex: 1
      padding: 0 7px

      @media (max-width: $breakpoint-sm - 1)
        display: block
        max-width: 100% !important
        margin-bottom: 22px

  &__flat
    max-width: 110px
  &__phone
    max-width: 190px
  &__submit
    max-width: 240px

    &-button
      display: block
      width: 100%
      border: 0
      background: #4caf50
      color: #ffffff
      height: 64px
      line-height: 1.4
      font-size: 15px
      font-weight: bold
      border-radius: 4px
      anim()
      cursor: pointer
      outline: 0

      &:hover
        background: #289C2D

      &:disabled
        background: #A2D5A6
        cursor: auto
