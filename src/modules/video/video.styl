.video
  background: #E6E8EB
  position: relative
  max-height: 630px
  cf()

  &:after
    content: ''
    display: block
    padding-top: 56.25%

  @media (max-width: $breakpoint-sm - 1)
    max-height: none
    &:after
      display: none

  &__left,
  &__right
    position: absolute
    height: 100%
    width: 50%

    @media (max-width: $breakpoint-sm - 1)
      position: relative
      width: 100%

  &__left
    left: 0

    @media (max-width: $breakpoint-sm - 1)
      &:after
        content: ''
        display: block
        padding-top: 56.25%

  &__right
    right: 0

  &__content
    position: absolute
    text-align: center
    top: 50%
    left: 0
    width: 100%
    transform: translateY(-50%)

    @media (max-width: $breakpoint-sm - 1)
      position: relative
      transform: none
      padding: 28px 0

  &__title
    font-size: 22px
    color: #227EBA
    margin-bottom: 11px
    text-transform: uppercase

  &__text
    font-size: 18px
    color: #4a4a4a

  &__video
    position: absolute
    top: 0
    right: 0
    bottom: 0
    left: 0
    background: url(video-preview.jpg)
    background-size: cover

    &:after
      content: ''
      background-image: url(sprite-play.svg)
      position: absolute
      left: 50%
      top: 50%
      transform: translate(-50%, -50%)

    @media (max-width: $breakpoint-sm - 1)
      position: absolute
      top: 0
      right: 0
      bottom: 0
      left: 0